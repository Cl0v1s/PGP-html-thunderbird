{
    "manifest_version": 2,
    "name": "PGP Html",
    "description": "Thunderbird seems to mess with html contained in pgp-encrypted emails. This extension allows the html to be decrypted and rendered correctly.",
    "version": "1.0",
    "author": "Clovis Portron",
    "applications": {
        "gecko": {
            "id": "clovis@mail.byte49.exposed",
            "strict_min_version": "82.0"
        }
    },
    "permissions": [
        "messagesRead",
        "messagesModify",
        "tabs",
        "storage",
        "downloads"
    ],
    
    "background": {
        "scripts": [
            "openpgp.js",
            "common.js"
        ]
    },
    "options_ui": {
        "page": "preferences/preferences.html"
    },
    "icons": {
        "64": "res/64.png",
        "32": "res/32.png",
        "16": "res/16.png"
    },
    "message_display_action": {
        "default_icon": {
          "19": "res/16.png",
          "38": "res/32.png"
        },
        "default_title": "Download"
    }
}